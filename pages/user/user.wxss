/* pages/user/user.wxss */
.Body{
  position:fixed;
  top:4rem;
  border-radius: 10px;
  background:#fff;
  height:100%;
  width:100%;
}
.jump{
  display:flex;
  background:rgba(0,0,0,0.05);
  font-size:12px;
  color:#aaa;
  height:80rpx;
  line-height:80rpx;
  padding:0 20rpx;
  justify-content: space-between;
}
.jump>view:last-child{
  color:#000;
}
.userData{
  padding:20rpx;
  display:flex;
  border-bottom:1px solid rgba(0,0,0,0.05);
}
.userData>view:nth-child(2){
  margin:0 100rpx 0 40rpx;
  position:relative;
  top:40rpx;
}
.share{
  position:relative;
  top:50rpx;
  height:60rpx;
  color:#fff;
  width:100rpx;
  font-size:14px;
  text-align: center;
  line-height:60rpx;
  background:#f00;
  border-radius:40rpx;
}
.kNum{
  font-size:14px;
  color:#aaa;
}
.touxiang{
  width:160rpx;
  height:160rpx;
  border-radius:50%;
}
.tabbarList{
  display:flex;
  justify-content: space-around;
  font-size:14px;
  text-align:center;
  color:#aaa;
}
.tabbar{
  width:100rpx;
  height:90rpx;
}
.nothing{
  text-align: center;
  font-size:14px;
  color:#666;
}
.back{
  position:fixed;
  top:95%;
  width:100%;
  background:rgba(0,0,0,0.5);
  font-size:14px;
  color:#fff;
  display: flex;
  justify-content: space-between;
  padding:10rpx 10rpx 10rpx 20rpx;
}
.back>view:last-child{
  color: cornflowerblue;
  position:relative;
  right:30rpx;
}