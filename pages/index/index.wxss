/**index.wxss**/
.Body{
  position:fixed;
  top:160rpx;
  border-radius: 10px;
  background:#fff;
  width:90%;
  padding:40rpx;
}
.search{
  width:100%;
  text-align:center;
  font-size:12px;
  border:1px solid rgba(0,0,0,0.2);
  border-radius:20px;
  background:rgba(0,0,0,0.03);
  margin-bottom:40rpx;
}
.banner{
  width:100%;
  height:80%;
}
.buttons{
  display:flex;
  font-size:12px;
  justify-content: space-around;
}
.buttons>view{
  width:160rpx;
  height:50rpx;
  line-height:50rpx;
  text-align:center;
}
.checked{
  border-radius: 10px;
  background:#f00;
  color:#fff;
}
.songList image{
  width:160rpx;
  height:160rpx
}
.songList{
  height:3000rpx;
  margin-top:30rpx;
  overflow: auto!important;
}
swiper-item{
  overflow: auto!important;
}
scroll-view{
  height:3000rpx;
}
.song{
  display:flex;
  margin-bottom:20rpx;
}
.song>view:first-child{
  margin-right:20rpx;
}
.song>view:last-child{
  display: flex;
  width:100%;
  border-bottom:solid 1px rgba(0,0,0,0.2);
}
.song>view:last-child>view:first-child{
  width:300rpx;
  height:160rpx;
  margin-right:40rpx;
}
.song>view:last-child>view:last-child{
  line-height: 60rpx;
  width: 100rpx;
  height: 60rpx;
  background:rgba(0,0,0,0.1);
  text-align: center;
  color:#c00;
  font-size:14px;
  position:relative;
  top:50rpx;
  border-radius:40%;
}
.songTitle{
  font-size:16px;
  font-weight: bolder;
}
.songer,.num{
  margin-top:20rpx;
  font-size:12px;
  color:#aaa;
}